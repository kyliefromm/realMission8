@page
@model Mission7.Pages.AddBookModel
@{
}
<h2>Your Basket</h2>

<table class="table table-bordered tale=striped">
    <thead>
        <tr>
            <th>Items</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price</td>
                    <td>@(i.Quantity * i.Book.Price)</td>
                </tr>
                
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <span class="badge badge-pill badge-primary" style="float:right">

        <a class="btn btn-priamry" href="@Model.ReturnUrl">Back to Books</a>

    </span>
</div>

